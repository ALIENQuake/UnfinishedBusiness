DEFINE_ACTION_FUNCTION setup_original_yoshimo_portrait
BEGIN
  /////////////////////////////////
  /////////////////////////////////
  // Yoshimo's Original Portrait //
  /////////////////////////////////
  /////////////////////////////////

  COPY ~%mod_root%/ubnull.itm~ ~override/ubyoshi.xxx~ //null file to identify this component

  ACTION_IF ENGINE_IS "bg2ee"
  BEGIN
	COPY ~%mod_root%/portraits/NYOSHIML.BMP~ ~override/NYOSHIML.BMP~ 
    COPY ~%mod_root%/portraits/NYOSHIMM.BMP~ ~override/NYOSHIMM.BMP~          
    COPY ~%mod_root%/portraits/NYOSHIMS.BMP~ ~override/NYOSHIMS.BMP~
  END
  ELSE
  BEGIN
    COPY ~%mod_root%/portraits/NYOSHIMM.BMP~ ~override/NYOSHIMM.BMP~          
    COPY ~%mod_root%/portraits/NYOSHIMS.BMP~ ~override/NYOSHIMS.BMP~
    COPY ~%mod_root%/portraits/NYOSHIMM.BMP~ ~portraits/NYOSHIMM.BMP~
    COPY ~%mod_root%/portraits/NYOSHIMS.BMP~ ~portraits/NYOSHIMS.BMP~
	COPY ~%mod_root%/portraits/NYOSHIML.BMP~ ~override/NYOSHIML.BMP~ 
	COPY ~%mod_root%/portraits/NYOSHIML.BMP~ ~portraits/NYOSHIML.BMP~ 
  END
END	// setup_original_yoshimo_portrait

